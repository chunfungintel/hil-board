currentScript=`realpath $0`
currentScriptPath=`dirname ${currentScript}`
hilBasePath=`dirname ${currentScriptPath}../`
hilPingPath=${hilBasePath}/tools/hil-ping

${hilPingPath}

if [ $? -ne 0 ] ; then
    echo "The HIL board is not online"
    exit 1
fi

curl -X PUT http://localhost:9999/api/v1/stack/hil1/switch1 -H 'Content-Type: application/json' -d '{"state": 0}'
curl http://localhost:9999/api/v1/stack/hil1/switch1
echo

